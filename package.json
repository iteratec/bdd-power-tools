{
  "name": "bdd-power-tools",
  "description": "VS Code Extensions for working with Cucumber",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "prewatch": "node packages/feature-editor/syntaxes/syntaxes.js && cp packages/feature-editor/language-configuration.json packages/feature-editor/dist/",
    "version": "cp packages/feature-editor/package.json packages/feature-editor/dist/ && cp packages/gherkin-language-server/package.json packages/gherkin-language-server/dist/",
    "postversion": "",
    "test": "jest",
    "release": "lerna version --yes",
    "deploy": "lerna publish --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "prettier": "2.1.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.3",
    "vsce": "^1.81.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
